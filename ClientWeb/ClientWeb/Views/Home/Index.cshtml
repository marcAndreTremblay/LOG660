@{
    ViewBag.Title = "Home Page";
}
@if ((bool)System.Web.HttpContext.Current.Session["EstConnecté"])
{
    <div class="jumbotron">
        <h1>Bienvenue</h1>
    </div>
}
else
{
    <div class="jumbotron">
        <h1>Veuillez vous connecter</h1>
        @Html.ActionLink("Connexion", "Connexion", null, new { @class = "btn btn-primary btn-lg" })
    </div>
}