@{
    ViewBag.Title = "Home Page";
    ViewBag.UtilisateurConnecté = System.Web.HttpContext.Current.Session["UtilisateurConnecté"];
}
@if (ViewBag.UtilisateurConnecté != null)
{
    <div class="jumbotron">
        <h1>Bienvenue @ViewBag.UtilisateurConnecté.Personne.Prenom @ViewBag.UtilisateurConnecté.Personne.NomFamille</h1>
    </div>
}
else
{
    <div class="jumbotron">
        <h1>Veuillez vous connecter</h1>
        @Html.ActionLink("Connexion", "Connexion", null, new { @class = "btn btn-primary btn-lg" })
    </div>
}